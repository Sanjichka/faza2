@model WorkShop1.ViewModels.Filter4

@{
    ViewData["Title"] = "Studenti";
}
<h4 style="color:darkviolet; font-weight:bolder">Course: @ViewData["Predmet"]</h4>
<br />

<form asp-controller="CoursesProf" asp-action="StudPoCourse" method="get">
    <span style="color:dodgerblue">Year: </span> <input type="number" asp-for="year" />
    <input type="submit" value="Filter" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().SeminalUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().ProjectUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().SeminalPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().ProjectPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().AdditionalPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().ExamPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments.FirstOrDefault().FinishDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Enrollments)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => i.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.SeminalUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.ProjectUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.SeminalPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.ProjectPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.AdditionalPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.ExamPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.FinishDate)
            </td>
            <td>
                @if (i.FinishDate == null)
                {
                    <a asp-controller="EnrollmentsProf" asp-action="Edit" asp-route-id="@i.EnrollmentID">Edit</a> <span>|</span>
                }
                <a asp-controller="EnrollmentsProf" asp-action="Details" asp-route-id="@i.EnrollmentID">Details</a> |
                <a asp-controller="EnrollmentsProf" asp-action="Delete" asp-route-id="@i.EnrollmentID">Delete</a>
            </td>
        </tr>
                
            }
    </tbody>
</table>

<div>
    <a asp-action="Index" style="font-weight:bolder">Back to List</a>
</div>

