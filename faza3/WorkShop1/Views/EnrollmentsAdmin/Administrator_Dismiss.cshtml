@model WorkShop1.ViewModels.DismAdmin

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Administrator_Dismiss">
            <div class="form-group">
                <label asp-for="CourseID" class="control-label">Course</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Students</label>
                <select asp-for="SelectedStudents" class="form-control js-example-basic-multiple"
                        asp-items="Model.StudentList"> </select>
                <span asp-validation-for="SelectedStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishDate" class="control-label"></label>
                <input asp-for="FinishDate" class="form-control" />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Dismiss" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
          $("#SelectedStudents").select2();
        });
    </script>
}

