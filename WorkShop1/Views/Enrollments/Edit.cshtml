@model WorkShop1.Models.Enrollment

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:darkviolet; font-weight:bolder">Edit</h1>

<h4 style="color:deeppink; font-weight:bolder">Enrollment</h4>
<hr />
<hr />
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnrollmentID" />
            <div class="form-group">
                <label asp-for="CourseID" class="control-label" style="color:red; font-weight:bolder; font-size:larger"></label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID" style="color:red"></select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label" style="color:blue; font-weight:bolder; font-size:larger"></label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID" style="color:blue"></select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label" style="color:darkorange; font-weight:bolder; font-size:larger"></label>
                <input asp-for="Semester" class="form-control" style="color:darkorange"/>
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label" style="color:forestgreen; font-weight:bolder; font-size:larger"></label>
                <input asp-for="Year" class="form-control" style="color:forestgreen"/>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label" style="color:maroon; font-weight:bolder; font-size:larger"></label>
                <input asp-for="Grade" class="form-control" style="color:maroon"/>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminalUrl" class="control-label" style="color:hotpink; font-weight:bolder; font-size:larger"></label>
                <input asp-for="SeminalUrl" class="form-control" style="color:hotpink" />
                <span asp-validation-for="SeminalUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectUrl" class="control-label" style="color:deepskyblue; font-weight:bolder; font-size:larger"></label>
                <input asp-for="ProjectUrl" class="form-control" style="color:deepskyblue"/>
                <span asp-validation-for="ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamPoints" class="control-label" style="color:darkgreen; font-weight:bolder; font-size:larger"></label>
                <input asp-for="ExamPoints" class="form-control" style="color:darkgreen" />
                <span asp-validation-for="ExamPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminalPoints" class="control-label" style="color:darkviolet; font-weight:bolder; font-size:larger"></label>
                <input asp-for="SeminalPoints" class="form-control" style="color:darkviolet"/>
                <span asp-validation-for="SeminalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectPoints" class="control-label" style="color:deeppink; font-weight:bolder; font-size:larger"></label>
                <input asp-for="ProjectPoints" class="form-control" style="color:deeppink"/>
                <span asp-validation-for="ProjectPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalPoints" class="control-label" style="color:green; font-weight:bolder; font-size:larger"></label>
                <input asp-for="AdditionalPoints" class="form-control" style="color:green"/>
                <span asp-validation-for="AdditionalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishDate" class="control-label" style="color:darkblue; font-weight:bolder; font-size:larger"></label>
                <input asp-for="FinishDate" class="form-control" style="color:darkblue" />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="font-weight:bolder">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
