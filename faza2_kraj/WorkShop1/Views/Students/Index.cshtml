@model WorkShop1.ViewModels.Filter2

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:darkviolet; font-weight:bolder">Index</h1>

<p>
    <a asp-action="Create" style="color:deeppink; font-weight:bolder">Create New</a>
</p>

<form asp-controller="Students" asp-action="Index" method="get">
    <span style="color:dodgerblue">Name: </span><input type="text" asp-for="searchIme" />
    <span style="color:dodgerblue">StudentId : </span><input type="text" asp-for="searchStudentId" />
    <input type="submit" value="Filter" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students.FirstOrDefault().StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.FirstOrDefault().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.FirstOrDefault().EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.FirstOrDefault().AcquiredCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.FirstOrDefault().CurrentSemestar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.FirstOrDefault().EducationLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) {
        <tr>
            <td>
                @{ if (item.ProfilePicture != null)
                    {
                        <img src="~/images/@item.ProfilePicture"
                             class="rounded-circle"
                             height="40" width="40"
                             asp-append-version="true" />}
                }@item.FullName
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcquiredCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentSemestar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
